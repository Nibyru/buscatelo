<div id="comodidades">
	<div class="container">
		<div class="row" style="height:100%;">
			<div class="col-lg-3 col-md-3 col-sm-3 col-xs-4 filtros">
				<%= render 'shared/filtros' %>
			</div>
			<% @places.each do |place| %>
				<div class="col-lg-9 col-lg-offset-3 col-md-9 col-md-offset-3 col-sm-9 col-sm-offset-3 col-xs-8 col-xs-offset-4 place">
					<div class="cerrar">
						<%= image_tag('cerrar.png') %>
					</div>
					<div class="row">
						<ul class="col-lg-12 col-md-12 col-sm-12 col-xs-12 lista">
							<%= link_to (landing_path(place)) do %>
								<li class="col-lg-4 col-md-4 col-sm-6 col-xs-12 telo">
									<div class="descripcion">
										<h2><%= place.name %></h2>
										<p><%= place.address %></p>
										<h3>$ 250<b> / hs.</b></h3>
									</div>
									<div class="descripcion-foto">
										<div class="referencias">
											<span class="icon-comentarios"></span>
											<p>4,9 / 5 Â· Excelente</p>
										</div>
									</div>
								</li>
							<% end %>
						</ul>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>