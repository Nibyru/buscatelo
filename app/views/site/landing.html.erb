<div id="landing">
	<div class="container">
		<div class="row">

			<div class="col-lg-3 col-md-3 filtros">
				<%= render 'shared/filtros' %>
			</div>

			<div class="col-lg-9 col-lg-offset-3 col-md-9 col-md-offset-3 landing-page">

				<div class="volver">
					<%= link_to (comodidades_path) do %>
						<%= image_tag('volver.png') %>
					<% end %>
				</div>

				<div class="row">
					<div class="col-lg-12 col-md-12 informacion">

						<h1><%= @place.name %></h1>

						<div class="etiquetas">
							<% @place.amenities.each do |amenity| %>
								<div class="etiqueta-filtro">
									<span class="<%= amenity.icon %>"></span>
									<p><%= amenity.name %></p>
								</div>
							<% end %>
						</div>

						<div class="referencias">
							<span class="icon-comentarios"></span>
							<p>4,9 / 5 · Excelente</p>
						</div>
						
						<h4><%= @place.address %></h4>
						<h4><%= @place.phone %></h4>

						<div class="precios">
							<p>PRECIOS</p>
							<% @place.prices.each do |price| %>
								<span>
									<p><%= price.name %></p><h3>$<%= price.price %></h3>
								</span>
							<% end %>
						</div>

						<p class="turno">*Los turnos constan de 1.30 hs cada uno??????????? esto es un campo mas?</p>

						<div class="fotos">
							<% @place.photos.each do |photo| %>
								<%= image_tag(photo.photo_url) %>
							<% end %>
						</div>

						<div class="mapa">
						</div>

						<form class="comentarios">
							<p>DEJÁ TU OPINIÓN</p>
							<textarea></textarea>
							<div class="calificacion">
								<span class="icon-pinmapa"></span>
								<span class="icon-pinmapa"></span>
								<span class="icon-pinmapa"></span>
								<span class="icon-pinmapa"></span>
								<span class="icon-pinmapa"></span>
								<p>Muy bueno</p>
								<span class="icon-femenino"></span>
								<span class="icon-masculino"></span>
							</div>
							<input type="submit" value="ENVIAR">
						</form>

						<div class="ver-comentarios">
							<span class="boton-ver">
								<p>Ver todos los comentarios</p>
								<span class="icon-vermas"></span>
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>