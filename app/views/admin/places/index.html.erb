<h1>Listing places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Prices</th>
      <th>Amenities</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.address %></td>
        <td><%= place.phone %></td>
        <td><%= place.prices %></td>
        <td><%= place.amenities %></td>
        <td><%= link_to 'Show', admin_place_path(place) %></td>
        <td><%= link_to 'Edit', edit_admin_place_path(place) %></td>
        <td><%= link_to 'Destroy', admin_place_path(place), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

