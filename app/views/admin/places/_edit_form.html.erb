<%= form_for @place, url: admin_place_path(@place), html: { class: 'form-horizontal'} do |f| %>
  <% if @place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@place.errors.count, "error") %> prohibited this place from being saved:</h2>

      <ul>
      <% @place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address,  class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :address, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone,  class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button 'save', class: "btn btn-success" %>
    </div>
  </div>
<% end %>
