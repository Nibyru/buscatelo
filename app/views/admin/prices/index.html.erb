<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Listing prices</h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @prices.each do |price| %>
        <tr>
          <td><%= price.name %></td>
          <td>$<%= price.price %></td>
          <td>
            <div class="btn-group" role="group">
            <%= link_to admin_price_path(price), class: "btn btn-info" do %>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Show
            <% end %>
            <%= link_to edit_admin_price_path(price), class: "btn btn-info" do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
            <% end %>
            <%= link_to admin_price_path(price), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
              <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span> Remove
            <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="panel-footer">
  </div>
</div>
<%= link_to new_admin_price_path, class: "btn btn-success" do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create price
<% end %>